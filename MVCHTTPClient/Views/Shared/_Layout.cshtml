@using MVCHTTPClient.Areas.Admin.Security

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/OwnStyleSheet.css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home Collection", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Movies", "Index", "Movie", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Cd's", "Index", "Cd", new { area = "" }, new { @class = "" })</li>
                    @if (SessionController.UserIsInSession())
                    {
                        <li>@Html.ActionLink("Admin Front", "Index", "Admin", new { area = "Admin" }, new { @class = "" })</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (SessionController.UserIsInSession())
                    {
                        <li>@Html.ActionLink("Log Off, " + SessionController.Username, "LogOff", "Admin", new { Area = "Admin" }, new { })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "Index", "Login", new { Area = "Admin" }, new { }) </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Home Collection</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
